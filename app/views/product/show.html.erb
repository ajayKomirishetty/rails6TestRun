  <table class="table">
    <% if @product.audits.count > 0 %>
      <thead>
        <tr>
          <th>#</th>
          <th>Type</th>
          <th>view</th>
        </tr>
      </thead>
      <tbody>
      <% @product.audits.each do |audit| %>
            
          <tr>
            <td><%= audit.id %></td>
            <td><%= audit.action %></td>
            <td><a href="/audits/<%= audit.id %>">view</a></td>
          </tr>

        </tbody>
      <% end %>
    <% end %>
</table>
</div>
